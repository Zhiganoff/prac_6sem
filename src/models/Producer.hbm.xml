<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="models.Producer" table="Producer" schema="internet-shop">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="name">
            <column name="name" sql-type="varchar(100)" length="100"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="decimal(11)" precision="11"/>
        </property>
        <set name="productsById" inverse="true">
            <key>
                <column name="producer_id"/>
            </key>
            <one-to-many not-found="ignore" class="models.Product"/>
        </set>
    </class>
</hibernate-mapping>