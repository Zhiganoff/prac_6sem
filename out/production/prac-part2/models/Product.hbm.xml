<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="models.Product" table="Product" schema="internet-shop">
        <id name="productId">
            <column name="product_id" sql-type="bigint(20)"/>
        </id>
        <property name="producttypeId">
            <column name="producttype_id" sql-type="int(11)"/>
        </property>
        <property name="producerId">
            <column name="producer_id" sql-type="bigint(11)"/>
        </property>
        <property name="name">
            <column name="name" sql-type="varchar(63)" length="63"/>
        </property>
        <property name="cost">
            <column name="cost" sql-type="int(11)"/>
        </property>
        <property name="num">
            <column name="num" sql-type="int(11)"/>
        </property>
        <property name="size">
            <column name="size" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="properties">
            <column name="properties" sql-type="text"/>
        </property>
        <many-to-one name="productTypeByProducttypeId" class="models.ProductType">
            <column name="producttype_id"/>
        </many-to-one>
        <many-to-one name="producerByProducerId" class="models.Producer">
            <column name="producer_id"/>
        </many-to-one>
        <set name="purchaseProductsByProductId" inverse="true">
            <key>
                <column name="product_id"/>
            </key>
            <one-to-many not-found="ignore" class="models.PurchaseProducts"/>
        </set>
    </class>
</hibernate-mapping>