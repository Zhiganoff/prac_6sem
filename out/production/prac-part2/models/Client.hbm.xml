<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="models.Client" table="Client" schema="internet-shop">
        <id name="id">
            <column name="id" sql-type="bigint(20)"/>
        </id>
        <property name="fullname">
            <column name="fullname" sql-type="varchar(127)" length="127"/>
        </property>
        <property name="address">
            <column name="address" sql-type="varchar(255)"/>
        </property>
        <property name="phone">
            <column name="phone" sql-type="decimal(11)" precision="11"/>
        </property>
        <property name="email">
            <column name="email" sql-type="varchar(30)" length="30"/>
        </property>
        <set name="purchasesById" inverse="true">
            <key>
                <column name="client_id"/>
            </key>
            <one-to-many not-found="ignore" class="models.Purchase"/>
        </set>
    </class>
</hibernate-mapping>